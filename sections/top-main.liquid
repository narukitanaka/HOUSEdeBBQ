      </div><!-- /.swipr-wrapper -->

    </div><!-- /.recommend-swiper -->

    <div class="swiper-button-next"></div>

  </div>
</section><!-- /.p-top_wrap02 -->

<section class="p-top_wrap03 layer">
  <div class="inner">
    <div class="head-ttl">
      <p class="sub-ttl anime-ttl01">RANKING</p>
      <h2 class="fadeIn">人気ランキング</h2>
    </div><!-- /.head-ttl -->

    <ul class="ranking-swiper fadeIn">
      <div class="swiper-wrapper">

      {% for product in collections.all.products limit: 5 %}
        <li class="item-card swiper-slide">
          <a class="h-scale" href="{{ product.url }}">
            <div class="img-box obj-fit"><img src="{{ product.featured_image.src | img_url: 'master' }}" alt=""></div>
