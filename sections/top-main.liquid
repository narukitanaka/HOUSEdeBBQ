<!-- メインビジュアル -->
<div class="mv">
  <video playsinline autoplay muted loop>
    <source src="https://cdn.shopify.com/videos/c/o/v/bd109d32e3104ea2ba46d8fdf802c6bf.webm" type="video/webm" />
    <source src="https://cdn.shopify.com/videos/c/o/v/bd109d32e3104ea2ba46d8fdf802c6bf.mp4" type="video/mp4" />
  </video>
  <div class="logo img-box"><img src="https://cdn.shopify.com/s/files/1/0886/8125/1090/files/logo.png" alt=""></div>
  <div class="scrolldown u-sp">
    <span>SCROLL DOWN</span>
    <!-- <div class="line"></div> -->
