<!-- メインビジュアル -->
<div class="under-mv img-box obj-fit">
  <picture>
    <source srcset="https://cdn.shopify.com/s/files/1/0886/8125/1090/files/p-under_mv01.jpg" media="(max-width: 769px)">
    <img src="https://cdn.shopify.com/s/files/1/0886/8125/1090/files/p-under_mv01.jpg" alt="">
  </picture>
  <div class="head-ttl">
    <p class="sub-ttl anime-ttl01">LINE UP</p>
    <h2>商品一覧</h2>
  </div>
  <div class="img-box mv-ashirai">
    <picture>
      <source srcset="https://cdn.shopify.com/s/files/1/0886/8125/1090/files/footer_bg-ashirai_sp.svg" media="(max-width: 769px)">
